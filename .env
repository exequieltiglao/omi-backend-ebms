# Environment Configuration
# Copy this file to .env.local and update values as needed

# Base URL for API testing
BASE_URL=http://localhost:3000

# API Endpoints
API_BASE_URL=http://localhost:3000/api
AUTH_BASE_URL=http://localhost:3000/api/auth
USERS_BASE_URL=http://localhost:3000/api/users

# Test Configuration
TEST_TIMEOUT=30000
ASSERTION_TIMEOUT=10000

# Authentication
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=testpassword123
ADMIN_USER_EMAIL=admin@example.com
ADMIN_USER_PASSWORD=adminpassword123

# Database (if needed for test data setup)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=test_db
DB_USER=test_user
DB_PASSWORD=test_password

# Logging
LOG_LEVEL=info
LOG_FILE=reports/test-execution.log

# Test Data
TEST_DATA_DIR=./test-data
